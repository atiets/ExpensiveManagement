<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardCornerRadius="40dp"
    app:cardElevation="20dp"
    android:background="#FFD8D8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFD8D8">

        <TextView
            android:id="@+id/tv_title_add_loaichi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="THÊM LOẠI CHI"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#F44336" />

        <EditText
            android:id="@+id/edtNameLoaiChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Tên loại chi mới"
            android:background="#FD9192"
            android:padding="12dp"
            android:textColor="#F44336"
            android:gravity="start|center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnThemLoaiChi"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:text="Thêm"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#23000C"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btnHuyThemLoaiChi"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Hủy"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="#857878"
                app:cornerRadius="20dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
